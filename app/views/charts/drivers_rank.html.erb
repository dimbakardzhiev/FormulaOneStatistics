<%= line_chart Driver.first.results.rank_change,
	id: 'drivers_line_chart',
	width: "1000px",
	height: "500px", 
	title: "Position change of Lewis Hamilton in 2017",
	  colors: ['green', 'red'],
	  library: {
	  	yAxis: {
	  		title: {
	  			text: "Position in this race"
	  		},
            labels: {
               format: '{value}'
           }
       },
       xAxis: {
       		title: {
       			text: "Race name"
       		}
       },
	    tooltip: {
	      pointFormat: 'Position at this race: <b>{point.y}</b>'
	    },
	    series: [{
	    	name: 'Lewis Hamilton',
	    	data: Driver.first.results.includes(:race).where('races.year = 2017').pluck("races.name, position")
	    },
	    {
	    	name: 'Sebastian Vettel',
	    	data: Driver.find(5).results.includes(:race).where('races.year = 2017').pluck("races.name, position")
	    }
	]
  	}
 %>



