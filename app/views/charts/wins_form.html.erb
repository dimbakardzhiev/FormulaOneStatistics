<%= form_tag("wins_pie_chart", method: "get") do %>
  <%= label_tag(:driver, "Choose driver:") %>
  <%= collection_select(:driver, :driver_id, Driver.all, :id, :surname, :prompt => true) %>
  <%= label_tag(:year, "Choose year:") %>
  <%= select_tag(:year, options_for_select({"2017" => "2017", "2016" => "2016", "2015" => "2015", "2014" => "2014",
    "2013" => "2013", "2012" => "2012", "2011" => "2011", "2010" => "2010", "2009" => "2009", "2008" => "2008", "2007" => "2007", "2006" => "2006",
    "2005" => "2005", "2004" => "2004", "2003" => "2003", "2002" => "2002", "2001" => "2001"}), :prompt => "Please select year") %>
  <%= submit_tag("Draw chart") %>
<% end %>



